{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "storybook": {
      "cache": false
    },
    "sb:build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/storybook/**"]
    }
  }
}
